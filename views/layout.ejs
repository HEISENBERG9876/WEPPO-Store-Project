<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Very Cool Store' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">E-Shop</a>
            <a href="/" class="btn btn-primary">Home</a>

            <div class="ms-auto d-flex align-items-center gap-2">
                <% if (user && user.isLoggedIn) { %>
                    <% if (user.isAdmin) { %>
                        <a href="/api/admin/products" class="btn btn-outline-warning">Manage Products</a>
                        <a href="/api/admin/users" class="btn btn-outline-warning">Manage Users</a>
                        <a href="/api/admin/orders" class="btn btn-outline-warning">Manage Orders</a>
                    <% } else { %>
                        <a href="/api/cart/view" class="btn btn-outline-primary">View Cart</a>
                    <% } %>
                    
                    <form id="logout-form" action="/api/auth/logout" method="POST">
                        <button type="submit" class="btn btn-outline-danger">Logout</button>
                    </form>
                <% } else { %>
                    <a href="/login" id="login-button" class="btn btn-outline-primary">Login</a>
                    <a href="/register" id="register-button" class="btn btn-outline-primary">Register</a>
                <% } %>
            </div>
        </div>
    </header>

    <main class="container mt-4">
        <% if (typeof content !== "undefined") { %>
            <%- include(content) %>
        <% } %>
    </main>

    <%- additionalScript || '' %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
